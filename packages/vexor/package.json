{
  "name": "@vexorjs/core",
  "version": "1.0.0",
  "description": "A blazing-fast, batteries-included, multi-runtime Node.js backend framework",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./router": {
      "import": "./dist/router/index.js",
      "types": "./dist/router/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema/index.js",
      "types": "./dist/schema/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "benchmark": "node --experimental-strip-types benchmarks/index.ts"
  },
  "keywords": [
    "framework",
    "web",
    "http",
    "rest",
    "api",
    "fastify",
    "express",
    "hono",
    "typescript",
    "performance",
    "multi-runtime",
    "bun",
    "deno",
    "edge"
  ],
  "author": "Vexor Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sitharaj88/vexorjs.git",
    "directory": "packages/vexor"
  },
  "homepage": "https://github.com/sitharaj88/vexorjs",
  "bugs": {
    "url": "https://github.com/sitharaj88/vexorjs/issues"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "tsup": "^8.3.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
